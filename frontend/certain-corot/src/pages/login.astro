---
export const prerender = false;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Login - Quick Tasks</title>
  </head>
  <body class="bg-gray-100 h-screen w-screen grid place-items-center m-0 p-4">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg border border-gray-200">
      <h1 class="text-2xl font-bold mb-6 text-gray-800 text-center">Login to Quick Tasks</h1>
      
      <form id="login-form" class="flex flex-col gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <input 
            type="email" 
            name="email" 
            required 
            class="w-full border border-gray-300 p-2 rounded focus:outline-blue-500 text-black"
            placeholder="you@example.com"
          />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input 
            type="password" 
            name="password" 
            required 
            class="w-full border border-gray-300 p-2 rounded focus:outline-blue-500 text-black"
            placeholder="••••••••"
          />
        </div>

        <button 
          type="submit" 
          class="bg-blue-600 text-white py-2 rounded font-bold hover:bg-blue-700 transition mt-2"
        >
          Login
        </button>
        
        <p id="message" class="text-sm text-center mt-2 hidden"></p>
      </form>
      
      <div class="mt-6 text-center">
        <a href="/" class="text-sm text-blue-600 hover:underline">← Back to Tasks</a>
      </div>
    </div>

    <script>
      const loginForm = document.getElementById("login-form") as HTMLFormElement;
      const messageEl = document.getElementById("message");

      if (loginForm && messageEl) {
        loginForm.addEventListener("submit", async function (e) {
          e.preventDefault();
          const formData = new FormData(loginForm);
          const data = Object.fromEntries(formData.entries());

          try {
            // FIXED: Pointing back to your Payload Backend Port 3000
            const response = await fetch("http://127.0.0.1:3000/api/users/login", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(data),
              credentials: "include",
            });

            const result = await response.json();

            if (response.ok) {
              messageEl.textContent = "Login successful! Redirecting...";
              messageEl.className = "text-sm text-center mt-2 text-green-600";
              messageEl.classList.remove("hidden");
              setTimeout(() => { window.location.href = "/"; }, 1000);
            } else {
              messageEl.textContent = result.errors?.[0]?.message || "Login failed.";
              messageEl.className = "text-sm text-center mt-2 text-red-600";
              messageEl.classList.remove("hidden");
            }
          } catch (error) {
            messageEl.textContent = "Server error. Is the backend running on 3000?";
            messageEl.classList.remove("hidden");
          }
        });
      }
    </script>
  </body>
</html>